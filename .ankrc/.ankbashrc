## Ankit
for file in $(find ~/.ankcmd/.pre -maxdepth 1 -type f -prune ! -name '*DS*' | sort)
do
  source $file
done

for file in $(find ~/.ankcmd/.post -maxdepth 1 -type f -prune ! -name '*DS*' | sort)
do
